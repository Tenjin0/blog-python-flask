{
    "info": {
        "title": "My Awesome API",
        "version": "1.0.42",
        "description": "You know, for devs"
    },
    "paths": {
        "/api/users/{id}": {
            "get": {
                "summary": "User endpoint.",
                "description": "Get user by ID.",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "parameters": [
                    {
                        "in": "path",
                        "name": "id",
                        "description": "ID of the user",
                        "type": "integer",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "User object to be returned.",
                        "schema": {
                            "$ref": "#/components/schemas/User"
                        },
                        "examples": {
                            "about_me": {
                                "value": "About me"
                            },
                            "followed_count": {
                                "value": 0
                            },
                            "follower_count": {
                                "value": 0
                            },
                            "id": {
                                "value": 1
                            },
                            "last_seen": {
                                "value": null
                            },
                            "post_count": {
                                "value": 12
                            },
                            "username": {
                                "value": "toto"
                            }
                        }
                    },
                    "404": {
                        "description": "User not found."
                    }
                }
            }
        }
    },
    "tags": [],
    "openapi": "3.0",
    "components": {
        "schemas": {
            "User": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer",
                        "format": "int32"
                    },
                    "username": {
                        "type": "string"
                    },
                    "about_me": {
                        "type": "string"
                    },
                    "follower_count": {
                        "type": "integer",
                        "format": "int32"
                    },
                    "followed_count": {
                        "type": "integer",
                        "format": "int32"
                    },
                    "_links": {
                        "$ref": "#/components/schemas/Links"
                    },
                    "last_seen": {
                        "type": "string",
                        "format": "date"
                    },
                    "post_count": {
                        "type": "integer",
                        "format": "int32"
                    }
                },
                "required": [
                    "about_me",
                    "username"
                ]
            },
            "Users": {
                "type": "object",
                "properties": {
                    "_meta": {
                        "$ref": "#/components/schemas/Meta"
                    },
                    "_links": {
                        "$ref": "#/components/schemas/Links"
                    },
                    "items": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/User"
                        }
                    }
                }
            },
            "Links": {
                "type": "object",
                "properties": {
                    "followers": {
                        "type": "string",
                        "format": "url"
                    },
                    "avatar": {
                        "type": "string",
                        "format": "url"
                    },
                    "self": {
                        "type": "string",
                        "format": "url"
                    },
                    "followed": {
                        "type": "string",
                        "format": "url"
                    }
                }
            },
            "Meta": {
                "type": "object",
                "properties": {
                    "total_items": {
                        "type": "integer",
                        "format": "int32"
                    },
                    "per_page": {
                        "type": "integer",
                        "format": "int32"
                    },
                    "total_pages": {
                        "type": "integer",
                        "format": "int32"
                    },
                    "page": {
                        "type": "integer",
                        "format": "int32"
                    }
                }
            },
            "securitySchemes": {
                "properties": {
                    "bearerAuth": {
                        "type": "http",
                        "scheme": "bearer",
                        "bearerFormat": "JWT"
                    }
                }
            }
        },
        "parameters": {}
    }
}